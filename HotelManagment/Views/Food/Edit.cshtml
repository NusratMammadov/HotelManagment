@model Food
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <form method="post" enctype="multipart/form-data" id="create-product">
            <div class="form-group">
                @Html.LabelFor(m => m.FoodName)
                @Html.TextBoxFor(m => m.FoodName, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FoodName, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FoodPrice)
                @Html.TextBoxFor(m => m.FoodPrice, null, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(m => m.FoodPrice, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FoodCategoryId)
                @Html.DropDownListFor(m => m.FoodCategoryId, new SelectList(ViewBag.FoodCategories, "Id", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FoodCategoryId, "", new { @class = "text-danger" })

            </div>
           





            <button type="submit" class="btn btn-primary">Elave Et</button>





        </form>

    </div>
</div>



