@model List<Food>
@{
    ViewBag.Title = "Index";
}





<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-utensils"></i>Yeməklərin Siyahısı</h1>
                </div>
                <div class="col-3 text-right">
                    <a href="@Url.Action("create")" class="btn btn-success">Elave Et</a>
                </div>

            </div>
        </div>

        <div class="customer-list">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>
                            <div class="icon">
                                <img src="~/Public/assets/images/image-gallery/52102.png" alt="">
                            </div>
                        </td>
                       
                       
                        <th><h6>Qiymeti</h6></th>
                        <th><h6>Kateqoriyasi</h6></th>
                   
                        



                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        
                        <td>@item.FoodName</td>
                        <td>@item.FoodPrice.ToString("#.##") &#8380</td>
                        <td>@item.FoodCategory.Name</td>
                        


                        <td>
                            <a href="@Url.Action("edit",new {id=item.Id })" class="btn btn-sm btn-info">Yenile</a>
                            <a onclick="return confirm ('Are you sure ?')" href="@Url.Action("delete",new {id=item.Id })" class="btn btn-sm btn-danger">Sil</a>
                            <button type="button" class="btn btn-status active">Active</button>
                        </td>
                    </tr>
                    }

                </tbody>

            </table>
        </div>



    </div>
</div>


