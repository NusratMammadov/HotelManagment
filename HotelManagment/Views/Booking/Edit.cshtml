@model Booking
@{
    ViewBag.Title = "Edit";
}




<div class="page">
    <div id="room">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-sticky-note"></i>YENILE</h1>
                </div>

            </div>
        </div>



        <div class="create">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-row">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CustomerId)
                        @Html.DropDownListFor(m => m.CustomerId, new SelectList(ViewBag.Customers, "Id", "Name"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CustomerId)
                        @Html.DropDownListFor(m => m.CustomerId, new SelectList(ViewBag.Customers, "Id", "Surname"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })

                    </div>

                    <div class="d-flex form-group">
                        @Html.LabelFor(m => m.StartDate, new { @class = "form-control", @style = "width:140px;margin-top:35px;margin-left:7px;" })
                        @Html.TextBoxFor(m => m.StartDate, null, new { @class = "min", @type = "date", @min = DateTime.Now.ToString("yyyy-MM-dd"), @max = DateTime.Now.AddMonths(2).ToString("yyyy-MM-dd"), @style = "border-style:none; width:160px;  margin-left:25px;margin-top:35px;" })
                        @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="d-flex form-group">
                        @Html.LabelFor(m => m.EndDate, new { @class = "form-control", @style = "width:140px;margin-left:7px;" })
                        @Html.TextBoxFor(m => m.EndDate, null, new { @class = "min", @type = "date", @min = DateTime.Now.ToString("yyyy-MM-dd"), @max = DateTime.Now.AddMonths(2).ToString("yyyy-MM-dd"), @style = "border-style:none; width:160px;  margin-left:25px;" })
                        @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RoomId, new { @style = "width:140px;margin-top:53px;" })
                        @Html.DropDownListFor(m => m.RoomId, new SelectList(ViewBag.Rooms, "Id", "RoomNo"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RoomId, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.RoomId)
                        @Html.DropDownListFor(m => m.RoomId, new SelectList(ViewBag.Rooms, "Id", "DailyPrice"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RoomId, "", new { @class = "text-danger" })

                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.ApplicationUserId, new { @style = "width:140px;margin-left:30px;" })
                        @Html.DropDownListFor(m => m.ApplicationUserId, new SelectList(ViewBag.ApplicationUsers, "Id", "Name"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ApplicationUserId, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success">Update</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

