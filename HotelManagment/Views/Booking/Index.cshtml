@model List<Booking>
@{
    ViewBag.Title = "Index";
}



<div class="page">
    <div id="room">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-sticky-note"></i>BOOKING SIYAHISI</h1>
                </div>
                <div class="col-3 text-right">
                    <a href="@Url.Action("create","booking")" class="btn btn-success">Yeni Booking Yarat</a>
                </div>

            </div>
        </div>

        <div class="room-list">
            <table class="table table-hover">
                <thead>
                    <tr style="background-color:black">
                        <th>Musterinin Adi ve Soyadi</th>
                        <th>Baslanqic tarixi</th>
                        <th>Bitme tarixi</th>
                        <th>Otaq Nomresi</th>
                        <th>Otaq Pulu (&#8380)</th>
                        <th>Sifarisi Goturen</th>
                       



                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @item.Customer.Name @item.Customer.Surname
                        </td>
                        <td>
                            @item.StartDate.ToString("dd/MM/yyyy")

                        </td>
                        <td>
                            @item.EndDate.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @item.Room.RoomNo
                        </td>
                        <td>
                            <h6 class="price p-1" style="border-radius:5px">@item.Price.ToString("#.##") &#8380</h6>
                        </td>
                        <td>
                            @item.ApplicationUser.Name @item.ApplicationUser.Surname
                        </td>
                       
                        <td>
                            <a href="@Url.Action("edit", new { id=item.Id})" class="btn btn-primary mb-1" style="width:90px;">Yenile</a>
                            <a onclick="return confirm('Are you sure to delete Booking Name: @item.Customer.Name?')" href="@Url.Action("delete", new { id=item.Id})" class="btn btn-danger">Sil</a>
                            @*<button type="button" class="btn btn-status active">@item.IsDeleted</button>*@
                        </td>
                    </tr>
                    }




                </tbody>
            </table>
        </div>



    </div>
</div>
