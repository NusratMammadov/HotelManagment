@model ResturantOrder
@{
    ViewBag.Title = "Create";
}



<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-utensils"></i>Yeyəcək & İçəcək</h1>
                </div>

            </div>
        </div>

        <div class="create">
            <form method="post">

                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerId)
                    @Html.DropDownListFor(m => m.CustomerId, new SelectList(ViewBag.Customers, "Id", "Name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerId)
                    @Html.DropDownListFor(m => m.CustomerId, new SelectList(ViewBag.Customers, "Id", "Surname"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FoodId)
                    @Html.DropDownListFor(m => m.FoodId, new SelectList(ViewBag.Foods, "Id", "FoodName"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FoodId, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FoodCount)
                    @Html.TextBoxFor(m => m.FoodCount, null, new { @class = "form-control", @type = "number" })
                    @Html.ValidationMessageFor(m => m.FoodCount, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FoodId)
                    @Html.DropDownListFor(m => m.FoodId, new SelectList(ViewBag.Foods, "Id", "FoodPrice"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FoodId, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RoomId)
                    @Html.DropDownListFor(m => m.RoomId, new SelectList(ViewBag.Rooms, "Id", "RoomNo"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RoomId, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ApplicationUserId)
                    @Html.DropDownListFor(m => m.ApplicationUserId, new SelectList(ViewBag.ApplicationUser, "Id", "Name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ApplicationUserId, "", new { @class = "text-danger" })

                </div>


                <div class="form-row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success">Create</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

