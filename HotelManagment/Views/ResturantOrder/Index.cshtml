@model List<ResturantOrder>
@{
    ViewBag.Title = "Index";
}



<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-utensils"></i>Yeyəcək & İçəcək</h1>
                </div>
                <div class="col-3 text-right">
                    <a href="@Url.Action("create")" class="btn btn-success">Elave Et</a>
                </div>

            </div>
        </div>

        <div class="customer-list">
            <table class="table table-hover">
                <thead>
                    <tr>
                       
                        <th><h6>Musterinin Adi ve Soyadi</h6></th>
                        
                        <th><h6>Sifaris edilen Mehsul</h6></th>
                        <th><h6>Sifarisin qiymeti</h6></th>
                        <th><h6>Sifarisin sayi</h6></th>
                        <th><h6>Sifarisin cemi meblegi</h6></th>
                        <th><h6>Otaq Nomresi</h6></th>
                        <th><h6>Sifarisi alan Isci</h6></th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Customer.Name @item.Customer.Surname</td>
                            
                            <td>@item.Food.FoodName</td>
                            <td>@item.Food.FoodPrice.ToString("#.##") manat</td>
                            <td>@item.FoodCount.ToString("#.##") eded</td>
                            <td>@item.FoodOrderTotalPrice.ToString("#.##") manat</td>
                            <td>@item.Room.RoomNo</td>
                            <td>@item.ApplicationUser.Name</td>



                            <td>
                                <a href="@Url.Action("edit",new {id=item.Id })" class="btn btn-sm btn-info">Yenile</a>
                                <a onclick="return confirm ('Are you sure ?')" href="@Url.Action("delete",new {id=item.Id })" class="btn btn-sm btn-danger">Sil</a>
                                <button type="button" class="btn btn-status active">Active</button>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>



    </div>
</div>


