@model Customer

@{
    ViewBag.Title = "Create";

}




<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-6">
                    <h1><i class="fas fa-user-tie"></i>YENİ MÜŞTƏRİ</h1>
                </div>
            </div>
        </div>



        <div class="create">
            <form method="post">

                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Surname)
                    @Html.TextBoxFor(m => m.Surname, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Age)
                    @Html.TextBoxFor(m => m.Age, null, new { @class = "form-control", @type = "number" })
                    @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PassportNo)
                    @Html.TextBoxFor(m => m.PassportNo, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PassportNo, "", new { @class = "text-danger" })

                </div>

                
                <div class="form-row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success">Yarat</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

